@page
@using Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Constants;
@model Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Pages.Registration.RegisteredBusiness.EligibilityRegulationsModel
@{
    ViewData["Title"] = "Requirements – Move goods under NI Retail Movement Scheme";
}

@section Back{
    @if (ViewContext.HttpContext.Request.Headers["Referer"].ToString().Contains(Routes.RegisteredBusinessFboPhrGuidance))
    {
        <a asp-page="@Routes.Pages.Path.RegisteredBusinessFboPhrGuidancePath" asp-route-id="@Model.OrgId" class="govuk-back-link">Back</a>
    }
    else if (ViewContext.HttpContext.Request.Headers["Referer"].ToString().Contains(Routes.BusinessList))
    {
        <a asp-page="@Routes.Pages.Path.BusinessListPath" class="govuk-back-link">Back</a>
    }
    else
    {
        <feature name="Nirms-SuS-SelfServe">
            <a asp-page="@Routes.Pages.Path.BusinessListPath" class="govuk-back-link">Back</a>
        </feature>
        <feature name="Nirms-SuS-SelfServe" negate="true">
            <a asp-page="@Routes.Pages.Path.RegisteredBusinessBusinessPickerPath" class="govuk-back-link">Back</a>
        </feature>
    }
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ErrorSummary" model="ModelState" />

        <h1 class="govuk-heading-l">
            Requirements of the Northern Ireland Retail Movement Scheme
        </h1>

        <h2 class="govuk-heading-m">Signing up for the scheme</h2>

        <p>Your sign-up request must be approved before your business can move goods under the scheme.</p>
        <p>To sign up, your business must have an:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>address in the United Kingdom</li>
            <li>authorised representative who can agree to the terms and conditions of the scheme</li>
        </ul>
        <p>If your business has a Food Business Operator (FBO) number or Plant Health Registration (PHR) number, you will need to provide it.</p>
        <p>You must inform us if there are any changes to the information that you provide when you're signing up for the scheme.</p>
        <p>The places of dispatch and places of destination for all consignments must be registered for the scheme.</p>

        <h2 class="govuk-heading-m">Goods that you can move under the scheme</h2>
        <p>This service is only for retail goods that will be sold in Northern Ireland to the final consumer.</p>
        <p>All goods moved under the scheme must (one of the following):</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>originate in Great Britain </li>
            <li>be processed in Great Britain</li>
            <li>originate in the EU</li>
            <li>be on the list of <a href="https://www.gov.uk/government/publications/retail-movement-scheme-how-the-scheme-will-work/retail-movement-scheme-how-the-scheme-will-work#product-eligibility" rel="noopener noreferrer" target="_blank">Rest of World Goods (opens in a new tab)</a></li>
        </ul>
        <p>The goods must also follow any relevant <a href="https://www.gov.uk/guidance/labelling-requirements-for-certain-products-moving-from-great-britain-to-retail-premises-in-northern-ireland-under-the-retail-movement-scheme" rel="noopener noreferrer" target="_blank">labelling requirements (opens in a new tab)</a> in accordance with the scheme.</p>
        <p>Goods moved under the scheme must not enter the EU after arriving in Northern Ireland.</p>

        <h2 class="govuk-heading-m">Sending consignments under the scheme</h2>
        <p>To move consignments under the scheme, you must submit a packing list with your General Certificate. You will also need:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>an approved General Certificate</li>
            <li>a commercial seal with a unique identifier and associated number</li>
        </ul>
        <p>All businesses moving, handling or receiving consignments under the scheme must comply with the requirements of the scheme. Competent authorities may conduct checks on any consignments.</p>

        <p>For a period of 5 years from the date of dispatch, you must keep records of all consignments moved under the scheme.</p>

        <h2 class="govuk-heading-m">HMRC customs requirements</h2>
        <p>The usual customs requirements will still apply to all consignments moved under the scheme.</p>

        <h2 class="govuk-heading-m">Privacy notice</h2>
        @*<p>To learn more about the personal data that we collect, you can read the privacy notice in the <a href="https://www.gov.uk/government/collections/the-windsor-framework-further-detail-and-publications" target="_blank" rel="noopener noreferrer">guidance for the Windsor Framework</a>.</p>*@
        <p>To learn more about the personal data that we collect, you can read the <a href="/privacy-policy" target="_blank" rel="noopener noreferrer">privacy notice</a>.</p>

        <form method="POST" novalidate>
            <div class="govuk-form-group @(ModelState.HasError("Confirmed") ? "govuk-form-group--error" : null)">
                <p id="RegulationConfirmed_Error" class="govuk-error-message" gds-validation-for="Confirmed"></p>
                <div class="govuk-checkboxes__item govuk-!-margin-bottom-6">
                    <input class="govuk-checkboxes__input" id="Confirmed" type="checkbox" asp-for="Confirmed" value="true">
                    <label class="govuk-label govuk-checkboxes__label govuk-!-font-weight-bold" for="Confirmed">
                        I confirm that I have read and understood the guidance and regulations for moving goods under this scheme
                    </label>
                </div>
            </div>

            <button class="govuk-button" asp-page-handler="submit" id="button-elig_regulations_Submit data-module="govuk-button">Continue</button>
            <input type="hidden" asp-for="TradePartyId" />
            <input type="hidden" asp-for="OrgId" />
        </form>
    </div>
</div>