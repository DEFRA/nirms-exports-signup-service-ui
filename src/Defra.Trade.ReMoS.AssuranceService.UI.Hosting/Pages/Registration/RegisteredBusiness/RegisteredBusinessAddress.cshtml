@page
@using Defra.Trade.ReMoS.AssuranceService.UI.Domain.Constants;
@model Defra.Trade.ReMoS.AssuranceService.UI.Hosting.RegisteredBusinessAddressModel
@{
    ViewData["Title"] = "Enter Business Address";
}

@section Back{
    @if (ViewContext.HttpContext.Request.Headers["Referer"].ToString().Contains(Routes.RegistrationCheckYourAnswers))
    {
        <a asp-page="@Routes.Pages.Path.RegistrationCheckYourAnswersPath"
           asp-route-id="@Model.TraderId"
           class="govuk-back-link">Back</a>
    }
    else{
        <a asp-page="@Routes.Pages.Path.RegistrationTaskListPath" asp-route-id="@Model.TraderId" class="govuk-back-link">Back to dashboard</a>
    }
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ErrorSummary" model="ModelState" />

        <form method="POST" novalidate>
            <input type="hidden" asp-for="TraderId" />
            <div class="govuk-form-group @(ModelState.ErrorCount > 0 ? "govuk-form-group--error" : null)">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            <span class="govuk-caption-l">Business details</span>
                            What is the registered address of your business?
                        </h1>
                    </legend>

                   
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="LineOne">
                          Address line 1
                        </label>
                        <p id="LineOne_Error" class="govuk-error-message" gds-validation-for="LineOne"></p>
                        <input class="govuk-input" id="LineOne" asp-for="LineOne" type="text">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="LineTwo">
                          Address line 2 (optional)
                        </label>
                        <p id="LineTwo_Error" class="govuk-error-message" gds-validation-for="LineTwo"></p>
                        <input class="govuk-input" id="LineTwo" asp-for="LineTwo" type="text">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="CityName">
                          Town or city
                        </label>
                        <p id="CityName_Error" class="govuk-error-message" gds-validation-for="CityName"></p>
                        <input class="govuk-input" id="CityName" asp-for="CityName" type="text">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="PostCode">
                          Postcode
                        </label>
                        <p id="PostCode_Error" class="govuk-error-message" gds-validation-for="PostCode"></p>
                        <input class="govuk-input" id="PostCode" asp-for="PostCode" type="text">
                    </div>

                </fieldset>
                <br>
            </div>
            <div class="govuk-button-group">
                <button class="govuk-button" asp-page-handler="submit">Save and continue</button>
                <button class="govuk-button govuk-button--secondary" asp-page-handler="save">Save and return to dashboard</button>
            </div>

            <input type="hidden" asp-for="TraderId" />
            <input type="hidden" asp-for="AddressId" />
        </form>
    </div>
</div>
