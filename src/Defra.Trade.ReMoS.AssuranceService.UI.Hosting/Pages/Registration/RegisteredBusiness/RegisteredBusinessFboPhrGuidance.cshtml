@page
@model Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Pages.Registration.RegisteredBusiness.RegisteredBusinessCanNotRegisterModel
@using Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Constants;
@{
    ViewData["Title"] = "You can still submit a sign-up request now";
}

@section Back{
    <a asp-page="@Routes.Pages.Path.RegisteredBusinessFboNumberPath" asp-route-id="@Model.OrgId" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">
            Your business must have an FBO or a PHR number to sign up for NIRMS
        </h1>

        <p class="govuk-body">Depending on the goods your business will move, you need to apply for an FBO or PHR number. When you've received the number, you can return to continue your sign-up request.</p>

        <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                    If your business will only move cut flowers, wreaths and conifers
                </span>
            </summary>
            <div class="govuk-details__text">
                <p class="govuk-body">Register for a PHR number by contacting the plant authority for the country where your business is based.</p>

                <p class="govuk-body">
                    For England or Wales, <a href="https://submit.forms.service.gov.uk/form/261/register-to-become-a-plant-health-professional-operator/498" target="_blank" rel="noopener noreferrer">
                        apply to become a plant
                        health operator in England or Wales
                    </a>.
                </p>

                <p class="govuk-body">
                    For Scotland, contact the Science and Advice for Scottish Agriculture (SASA) by email at <a href="mailto:hort.marketing@gov.sco">hort.marketing@gov.sco</a> or call SASA on 0131 244 8890.
                </p>

                <p class="govuk-body">For Northern Ireland, contact the Department of Agriculture, Environment and Rural Affairs (DAERA) on 0300 200 7847.</p>
            </div>
        </details>

        <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                    If your business will move any other goods
                </span>
            </summary>
            <div class="govuk-details__text">
                <p class="govuk-body"><a href="https://www.gov.uk/food-business-registration" target="_blank" rel="noopener noreferrer">Register for an FBO number</a> with your local authority for free.</p>

                <p class="govuk-body">If your business cannot get an FBO number, call the Animal and Plant Health Agency (APHA) on 0300 1000 313.</p>
            </div>
        </details>

        <form method="post">
            <input type="hidden" asp-for="OrgId" />
            <div class="govuk-button-group">
                <button class="govuk-button govuk-button--secondary" asp-page-handler="returntodashboard" id="btnReturnToDashboard">Return to dashboard</button>
            </div>
        </form>
        

    </div>
</div>