@page
@model Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Pages.Registration.RegisteredBusiness.Contact.RegisteredBusinessContactPhoneModel
@{
    ViewData["Title"] = "Enter Business Contact Phone Number";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" novalidate>
            <input type="hidden" asp-for="TradePartyId" />
            <div class="govuk-form-group @(ModelState.HasError("PhoneNumber") ? "govuk-form-group--error" : null)">
                <label for="business-phone">
                    <h1 class="govuk-heading-l">
                        <span class="govuk-caption-l">Contact Details</span>
                        Telephone number
                    </h1>
                </label>
                <p class="govuk-hint" id="telephone-hint">
                    The telephone number of the contact person at the business responsible for Northern Ireland Retail Movement Scheme movements. We'll only use this if there an issue with sign up, or with a specific movement.
                </p>
                <p id="Phone_Error" class="govuk-error-message" gds-validation-for="PhoneNumber"></p>
                <input class="govuk-input" asp-for="PhoneNumber" id="business-phone" aria-describedby="" type="telephone-hint" spellcheck="false" />
            </div>
            <div class="govuk-form-group">
                <button class="govuk-button" asp-page-handler="submit">Save and continue</button>                
            </div>
        </form>
    </div>
</div>
