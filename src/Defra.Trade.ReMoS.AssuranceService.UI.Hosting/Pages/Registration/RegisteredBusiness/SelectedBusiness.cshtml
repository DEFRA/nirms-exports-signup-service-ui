@page
@using Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Constants;
@model Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Pages.Registration.RegisteredBusiness.SelectedBusinessModel
@{
    ViewData["Title"] = "Selected business";
}

@section Back{
    <a asp-page="@Routes.Pages.Path.RegistrationTaskListPath" asp-route-id="@Model.OrgId" class="govuk-back-link">Back to dashboard</a>
}


<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">
            Selected business
        </h1>

        <p class="govuk-body">You are signing up <span class="govuk-!-font-weight-bold">@Model.SelectedBusinessName</span> for the NI Retail Movement Scheme.</p>

        <feature name="Nirms-SuS-SelfServe">
            <p class="govuk-body">To sign up a different business, <a asp-page="@Routes.Pages.Path.BusinessListPath">start a new sign up request</a>.</p>
        </feature>
        <feature name="Nirms-SuS-SelfServe" negate="true">
            <p class="govuk-body">To sign up a different business, <a asp-page="@Routes.Pages.Path.RegisteredBusinessBusinessPickerPath">start a new sign up request</a>.</p>
        </feature>

    </div>
</div>


