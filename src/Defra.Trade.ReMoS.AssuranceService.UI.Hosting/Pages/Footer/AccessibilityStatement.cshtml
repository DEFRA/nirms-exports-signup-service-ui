@page
@{
    ViewData["Title"] = "Accessbility Statement";
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-l">
                    Cookies
                </h1>

                <p class="govuk-body">The Move goods under  NI Retail Movement Scheme puts small files (known as ‘cookies') on your computer.</p>

                <p class="govuk-body">These cookies are used across this website.</p>

                <p class="govuk-body">
                    Find out <a href="https://ico.org.uk/for-the-public/online/cookies" class="govuk-link" target="_blank">how to manage cookies</a> from the Information Commissioner's Office.
                </p>

                <h2 class="govuk-heading-m govuk-!-margin-top-6">Essential cookies (strictly necessary)</h2>

                <table class="govuk-table">
                    <caption class="govuk-table__caption">Essential cookies we use</caption>
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header">Name</th>
                            <th scope="col" class="govuk-table__header">Purpose</th>
                            <th scope="col" class="govuk-table__header">Expires</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">authentication</th>
                            <td class="govuk-table__cell">Captures which user is signed in to the service.</td>
                            <td class="govuk-table__cell">After 30 minutes of inactivity.</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <th scope="row" class="govuk-table__header">anti-forgery</th>
                            <td class="govuk-table__cell">Prevents forgery attacks from other websites - this helps keeps your information secure.</td>
                            <td class="govuk-table__cell">When session ends.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
