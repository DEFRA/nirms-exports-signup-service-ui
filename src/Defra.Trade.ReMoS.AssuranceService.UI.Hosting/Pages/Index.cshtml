@page
@model IndexModel
@using Defra.Trade.ReMoS.AssuranceService.UI.Domain.Constants;
@{
    ViewData["Title"] = "Home page";
}

<container class="govuk-width-container">
    <div>
        <h1 class="govuk-heading-l">Existing Submission</h1>
        <form method="post">
            <div class="govuk-form-group">
                <input class="govuk-input" asp-for=Id />
            </div>
            <button class="govuk-button" asp-page-handler="submit" id="button-rbIndexSubmit">Search</button>
        </form>

        <form method="post">
            <h1 class="govuk-heading-l">New Submission</h1>
            <button class="govuk-button" asp-page-handler="save" id="button-rbIndexSave">Start new</button>
        </form>
    </div>
</container>