@page
@using Defra.Trade.ReMoS.AssuranceService.UI.Domain.Constants;
@model Defra.Trade.ReMoS.AssuranceService.UI.Hosting.Pages.Establishments.PostcodeSearchModel
@{
    ViewData["Title"] = "Enter Establishment postcode";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form class="form" method="post">
            <input type="hidden" asp-for="TradePartyId"/>
            <h1 class="govuk-heading-l">
                <span class="govuk-caption-l">Establishments</span>
                Add a point of departure
            </h1>
            <p class="govuk-hint" id="search-points-of-departure">Add all establishments in Great Britan from which your goods will be departing under the scheme.</p>

            <div class="govuk-form-group">
                <label class="govuk-label govuk-!-font-weight-bold" for="search-points-of-departure">Establishment postcode</label>
                <input class="govuk-input" id="search-points-of-departure" asp-for="Postcode" type="search">
            </div>

            <button class="govuk-button" asp-page-handler="submit">Find establishment</button>

        </form>

    </div>
</div>